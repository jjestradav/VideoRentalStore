@model Vidly.Models.Movie
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ol>

    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString("MM/dd/yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("MM/dd/yyyy")</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ol>

